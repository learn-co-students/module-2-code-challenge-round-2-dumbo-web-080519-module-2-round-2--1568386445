<h1>Create a New Pizza</h1>

<% if flash[:errors] %>
<% flash[:errors].each do |error_message| %>
<%= error_message %>
<% end %>
<% end %>

<%= form_for @pizza do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :ingredients %>
<%= f.text_field :ingredients %>

<%= f.label :restaurant_id %>
<%= f.collection_select :restaurant_id, @restaurants, :id, :name %>

<%= f.submit %>
<% end %>
